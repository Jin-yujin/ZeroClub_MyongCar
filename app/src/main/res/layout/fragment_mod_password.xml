<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.mypage.ModPasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:paddingVertical="10dp"
            android:background="@drawable/border_bottom"
            android:gravity="center"
            android:fontFamily="@font/myong_l"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:textSize="15sp"
            android:fontFamily="@font/myong_l"
            android:text=" 현재 비밀번호를 입력해주세요."
            />

        <EditText
            android:id="@+id/etCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myong_l"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:textSize="15sp"
            android:background="@drawable/edit_round"
            android:autofillHints="name"
            android:hint="현재 비밀번호"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:textSize="15sp"
            android:fontFamily="@font/myong_l"
            android:text=" 변경할 비밀번호를 입력해주세요."
            />

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myong_l"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:textSize="15sp"
            android:background="@drawable/edit_round"
            android:hint="새 비밀번호 (8-15자의 영문/숫자 조합)"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myong_l"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:textSize="15sp"
            android:background="@drawable/edit_round"
            android:hint="새 비밀번호 확인"
            android:inputType="textPassword" />

        <android.widget.Button
            android:id="@+id/btnChangePassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_navy"
            android:fontFamily="@font/myong_l"
            android:text="변경하기"
            android:textSize="17dp"
            android:textColor="@color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>